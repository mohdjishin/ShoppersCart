<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3" >
                <div class="card" style="width: 15rem; height:24rem">
                    <img class="card-img-top" src="product-images/{{this._id}}.jpeg" alt="Card image cap" height=200rem>
                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <p style="color: green;">${{this.Price}}</p>
                        <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to Cart</a>
                    </div>
                </div>



            </div>
            {{/each}}
        </div>
    </div>
</section>